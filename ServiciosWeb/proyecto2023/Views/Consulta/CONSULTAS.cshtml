
@{
    Layout = null;
}



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.0/chart.min.js" integrity="sha512-sW/w8s4RWTdFFSduOTGtk4isV1+190E/GghVffMA9XczdJ2MDzSzLEubKAs5h0wzgSJOQTRYyaz73L3d6RtJSg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>


</head>
<body>

    <partial name="_MenuDinamicoEmpresarial" />
    <h1>CONSULTAS</h1>
   
    <div class="row mt-2">


        <div class="col-sm-6">

            <div class="card">

                <div class="card-header">Ventas de los ultimos 5 dias</div>

                <div class="card-body">

                    <canvas id="chartVentas" style="max-height:250px"></canvas>

                </div>
            </div>



        </div>


        <div class="col-sm-6">

            <div class="card">

                <div class="card-header">Productos mayor vendidos</div>

                <div class="card-body">

                    <canvas id="chartProductos" style="max-height:250px"></canvas>

                </div>
            </div>



        </div>

    </div>


    <div class="col-sm-12">

        <div class="card">

            <div class="card-header">Mayores ventas por mes</div>

            <div class="card-body">

                <canvas id="chartProductosPorMes" style="max-height:250px"></canvas>

            </div>
        </div>



    </div>

    
   

    <script>

        function resumenVenta() {
            fetch("/Consulta/resumenVenta")
                .then((response) => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error(response.statusText);
                    }
                })
                .then((dataJson) => {
                  //  console.log(dataJson);

                    const labels = dataJson.map((item)=>{return item.fecha})
                    const values = dataJson.map((item)=>{return item.cantidad})
                  //  console.log(labels);
                  //  console.log(values);

                    const data = {
                        labels: labels,
                        datasets: [
                            {
                                label: 'cantidad',
                                data: values,
                                backgroundColor: 'rgb(54, 162, 235)',
                                borderWidth: 1
                            }
                        ]
                    };

                    const config = {
                        type: 'bar',
                        data: data,
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    };


                    const canvasBarra = document.getElementById("chartVentas");

                    const graficoBarras = new Chart(canvasBarra, config)
                    
                })
                .catch((error) => {
                    console.error(error);
                });
        }



        function resumenProducto() {
            fetch("/Consulta/resumenProducto")
                .then((response) => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error(response.statusText);
                    }
                })
                .then((dataJson) => {
                  //  console.log(dataJson);

                    const labels = dataJson.map((item) => { return item.producto })
                    const values = dataJson.map((item) => { return item.cantidad })
                  //  console.log(labels);
                  //  console.log(values);

                    const data = {
                        labels: labels,
                        datasets: [{
                            label: 'cantidad',
                            data: values,
                            backgroundColor: [
                                'rgb(255, 99, 132)',
                                'rgb(54, 162, 235)',
                                'rgb(255, 205, 86)',
                                "#01AF40"
                            ],
                            hoverOffset: 4
                        }]
                    };

                    const config = {
                        type: 'doughnut',
                        data: data,
                    };


                    const canvasDona = document.getElementById("chartProductos");

                    const graficoDona = new Chart(canvasDona, config)

                })
                .catch((error) => {
                    console.error(error);
                });
        }






        function resumenProductoMasVendidoXMes() {
            fetch("/Consulta/resumenMes")
                .then((response) => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error(response.statusText);
                    }
                })
                .then((dataJson) => {
                    console.log(dataJson);

                    const labels = dataJson.map((item) => { return item.fecha })
                    const values = dataJson.map((item) => { return item.cantidad })
                    const producto = dataJson.map((item) => { return item.producto })
                    console.log(labels);
                    console.log(values);

                    const combinedLabels = [];
                    for (let i = 0; i < producto.length; i++) {
                        combinedLabels.push(producto[i] + ' - ' + labels[i]);
                    }

                    const data = {
                            labels: combinedLabels,
                        datasets: [
                            {
                                label: 'cantidad',
                                data: values,
                                backgroundColor: 'rgb(54, 162, 235)',
                                borderWidth: 1
                            }
                        ]
                    };

                    const config = {
                        type: 'bar',
                        data: data,
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    };


                    const canvasBarra = document.getElementById("chartProductosPorMes");

                    const graficoBarras = new Chart(canvasBarra, config)

                })
                .catch((error) => {
                    console.error(error);
                });
        }




        $(document).ready(() => {

            resumenVenta()
            resumenProducto()
            resumenProductoMasVendidoXMes()
        })






    </script>




</body>
</html>