@model proyecto2023.Models.TbUsuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>


    <div class="container mt-5 pt-5">


        <div class="row justify-content-center">

            <div class="col-12 col-xl-4 col-md-6">

                <div class="card">

                    <div class="card-header">

                        Registrate

                    </div>

                    <div class="card-body">

                        <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                            <input class="form-control mb-3" type="text" placeholder="Correo" asp-for="EmailUsu" required />
                            <input class="form-control mb-3" type="text" placeholder="contrasena" asp-for="PasswordUsu" required />
                            <input class="form-control mb-3" type="text" placeholder="nombre" asp-for="NombreUsu" required />
                            <input class="form-control mb-3" type="text" placeholder="apellido" asp-for="ApellidoUsu" required />
                            <input class="form-control mb-3" value="activo" type="hidden" placeholder="estado" asp-for="EstadoUsu" required />
                            <input class="form-control mb-3" type="text" placeholder="Nombre De Usuario" asp-for="UsuarioUsu" required />
                            <input class="form-control mb-3" value="8" type="hidden" placeholder="rol" asp-for="IdRol" required />
                            <input class="form-control mb-3" value="1" type="hidden" placeholder="NuevoUsu" asp-for="NuevoUsuarioUsu" required />

                            <div class="d-grid gap-2 mb-3">

                                <button class="btn btn-primary" type="submit">Registrate</button>

                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">

                                        @ViewData["Mensaje"]

                                    </div>

                                </div>
                            }
                            ?Ya tienes una cuenta <a href="@Url.Action("IniciarSesion","Inicio")">Iniciar Sesion</a>

                        </form>

                    </div>

                </div>


            </div>

        </div>















    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
